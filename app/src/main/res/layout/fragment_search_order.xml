<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".fragment.SearchOrderFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clTopView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/bottom_rectangle_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSearchOrderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="Search Order"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/clTopView">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tILFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            app:layout_constraintEnd_toStartOf="@+id/ingFromCalendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/etFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="From" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/ingFromCalendar"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:background="@drawable/ic_location"
            app:layout_constraintBottom_toBottomOf="@+id/tILFrom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tILFrom" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tILTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            app:layout_constraintEnd_toStartOf="@+id/ingToCalendar"
            app:layout_constraintStart_toStartOf="@+id/tILFrom"
            app:layout_constraintTop_toBottomOf="@id/tILFrom">

            <EditText
                android:id="@+id/etTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="To" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/ingToCalendar"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:background="@drawable/ic_location"
            app:layout_constraintBottom_toBottomOf="@+id/tILTo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tILTo" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tILDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            app:layout_constraintEnd_toStartOf="@+id/ingDate"
            app:layout_constraintStart_toStartOf="@+id/tILFrom"
            app:layout_constraintTop_toBottomOf="@id/tILTo">

            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/ingDate"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:background="@drawable/ic_calendar"
            app:layout_constraintBottom_toBottomOf="@+id/tILDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tILDate" />

        <Button
            android:id="@+id/btnSearch"
            android:background="@drawable/rounded_button_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:paddingStart="@dimen/_36sdp"
            android:paddingEnd="@dimen/_36sdp"
            android:text="@string/search"
            android:textSize="@dimen/_10sdp"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="@+id/ingDate"
            app:layout_constraintStart_toStartOf="@+id/tILFrom"
            app:layout_constraintTop_toBottomOf="@+id/tILDate" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/tvResultCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 results found"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSortBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/tvResultCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvResultCount" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            tools:listitem="@layout/row_order_list"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvResultCount" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>