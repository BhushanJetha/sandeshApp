<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8sdp">

    <TextView
        android:id="@+id/tvSelectTransactionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Transaction"
        android:textColor="@color/colorBlack" />

    <Spinner
        android:id="@+id/spinnerTransactionType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectTransactionTitle" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/rounded_button_background"
        android:text="View"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTransactionType" />

    <Button
        android:id="@+id/btnDownlaod"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/rounded_button_background"
        android:text="Download"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/btnView" />

</android.support.constraint.ConstraintLayout>