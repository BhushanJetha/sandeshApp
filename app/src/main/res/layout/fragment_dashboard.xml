<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:id="@+id/imgKYC"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/imgProfile"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_kyc" />

            <TextView
                android:id="@+id/tvKYC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="KYC"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgKYC"
                app:layout_constraintStart_toStartOf="@+id/imgKYC"
                app:layout_constraintTop_toBottomOf="@id/imgKYC" />

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgKYC"
                app:layout_constraintEnd_toStartOf="@+id/imgWallet"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgKYC"
                app:layout_constraintTop_toTopOf="@+id/imgKYC"
                app:srcCompat="@drawable/ic_profile" />

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="My Profile"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgProfile"
                app:layout_constraintStart_toStartOf="@+id/imgProfile"
                app:layout_constraintTop_toBottomOf="@id/imgProfile" />

            <ImageView
                android:id="@+id/imgWallet"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgProfile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgProfile"
                app:layout_constraintTop_toTopOf="@+id/imgProfile"
                app:srcCompat="@drawable/ic_my_wallet" />

            <TextView
                android:id="@+id/tvWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="My Wallet"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgWallet"
                app:layout_constraintStart_toStartOf="@+id/imgWallet"
                app:layout_constraintTop_toBottomOf="@id/imgWallet" />

            <ImageView
                android:id="@+id/imgSendersOrders"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/imgSearchTravellers"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvKYC"
                app:srcCompat="@drawable/ic_search_order" />

            <TextView
                android:id="@+id/tvSendersOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="Search Orders"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgSendersOrders"
                app:layout_constraintStart_toStartOf="@+id/imgSendersOrders"
                app:layout_constraintTop_toBottomOf="@id/imgSendersOrders" />

            <ImageView
                android:id="@+id/imgSearchTravellers"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgSendersOrders"
                app:layout_constraintEnd_toStartOf="@+id/imgPlanTravel"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgSendersOrders"
                app:layout_constraintTop_toTopOf="@+id/imgSendersOrders"
                app:srcCompat="@drawable/ic_search_travelar" />

            <TextView
                android:id="@+id/tvSearchTravellers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="Search Travellers"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgSearchTravellers"
                app:layout_constraintStart_toStartOf="@+id/imgSearchTravellers"
                app:layout_constraintTop_toBottomOf="@id/imgSearchTravellers" />

            <ImageView
                android:id="@+id/imgPlanTravel"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgSearchTravellers"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgSearchTravellers"
                app:layout_constraintTop_toTopOf="@+id/imgSearchTravellers"
                app:srcCompat="@drawable/ic_plan_a_travel" />

            <TextView
                android:id="@+id/tvPlanTravel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="Plan a Travel"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgPlanTravel"
                app:layout_constraintStart_toStartOf="@+id/imgPlanTravel"
                app:layout_constraintTop_toBottomOf="@id/imgPlanTravel" />

            <ImageView
                android:id="@+id/imgSendParcel"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/imgTrackParcel"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSendersOrders"
                app:srcCompat="@drawable/ic_send_parcel" />

            <TextView
                android:id="@+id/tvSendParcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="Send Parcel"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgSendParcel"
                app:layout_constraintStart_toStartOf="@+id/imgSendParcel"
                app:layout_constraintTop_toBottomOf="@id/imgSendParcel" />

            <ImageView
                android:id="@+id/imgTrackParcel"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgSendParcel"
                app:layout_constraintEnd_toStartOf="@+id/imgStartJourney"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgSendParcel"
                app:layout_constraintTop_toTopOf="@+id/imgSendParcel"
                app:srcCompat="@drawable/ic_track_your_parcel" />

            <TextView
                android:id="@+id/tvTrackParcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="Track Your Parcel"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgTrackParcel"
                app:layout_constraintStart_toStartOf="@+id/imgTrackParcel"
                app:layout_constraintTop_toBottomOf="@id/imgTrackParcel" />

            <ImageView
                android:id="@+id/imgStartJourney"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgTrackParcel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgTrackParcel"
                app:layout_constraintTop_toTopOf="@+id/imgTrackParcel"
                app:srcCompat="@drawable/ic_start_journey" />

            <TextView
                android:id="@+id/tvStartJourney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="Start Journey"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgStartJourney"
                app:layout_constraintStart_toStartOf="@+id/imgStartJourney"
                app:layout_constraintTop_toBottomOf="@id/imgStartJourney" />

            <ImageView
                android:id="@+id/imgEndJourney"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/imgComplaintDispute"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSendParcel"
                app:srcCompat="@drawable/ic_end_journey" />

            <TextView
                android:id="@+id/tvEndJourney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="End Journey"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgEndJourney"
                app:layout_constraintStart_toStartOf="@+id/imgEndJourney"
                app:layout_constraintTop_toBottomOf="@id/imgEndJourney" />

            <ImageView
                android:id="@+id/imgComplaintDispute"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgEndJourney"
                app:layout_constraintEnd_toStartOf="@+id/imgTC"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgEndJourney"
                app:layout_constraintTop_toTopOf="@+id/imgEndJourney"
                app:srcCompat="@drawable/ic_complaint_dispute" />

            <TextView
                android:id="@+id/tvComplaintDispute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="Complaint/Dispute"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgComplaintDispute"
                app:layout_constraintStart_toStartOf="@+id/imgComplaintDispute"
                app:layout_constraintTop_toBottomOf="@id/imgComplaintDispute" />

            <ImageView
                android:id="@+id/imgTC"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgComplaintDispute"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgComplaintDispute"
                app:layout_constraintTop_toTopOf="@+id/imgComplaintDispute"
                app:srcCompat="@drawable/ic_terms_and_conditions" />

            <TextView
                android:id="@+id/tvTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="T&amp;C"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgTC"
                app:layout_constraintStart_toStartOf="@+id/imgTC"
                app:layout_constraintTop_toBottomOf="@id/imgTC" />

            <ImageView
                android:id="@+id/imgMyRequestedOrders"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/dashboard_icon_background"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/imgProfile"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEndJourney"
                app:srcCompat="@drawable/ic_terms_and_conditions" />

            <TextView
                android:id="@+id/tvMyRequestedOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="My Requested Orders"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/imgMyRequestedOrders"
                app:layout_constraintStart_toStartOf="@+id/imgMyRequestedOrders"
                app:layout_constraintTop_toBottomOf="@id/imgMyRequestedOrders" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/rounded_button_background"
                android:padding="@dimen/_8sdp"
                android:text="Next (for a time being)"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEndJourney" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>