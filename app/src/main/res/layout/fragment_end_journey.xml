<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.aystech.sandesh.fragment.EndJourneyFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clTopView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/ic_bg_circle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="End Journey"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_18sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clTopView">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILDeliveryOption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/etDeliveryOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Transaction ref no." />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tvDeliveryParcelTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:padding="@dimen/_6sdp"
                    android:text="Delivery Parcel"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toStartOf="@+id/rgDeliveryParcel"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@+id/tILDeliveryOption" />

                <RadioGroup
                    android:id="@+id/rgDeliveryParcel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/tvDeliveryParcelTitle"
                    app:layout_constraintEnd_toEndOf="@+id/tILDeliveryOption"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvDeliveryParcelTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvDeliveryParcelTitle">

                    <RadioButton
                        android:id="@+id/rbDeliveryParcelYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rbDeliveryParcelNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvReceiveParcelTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:padding="@dimen/_6sdp"
                    android:text="Receive Parcel"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toStartOf="@+id/rgReceiveParcel"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@+id/rgDeliveryParcel" />

                <RadioGroup
                    android:id="@+id/rgReceiveParcel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/tvReceiveParcelTitle"
                    app:layout_constraintEnd_toEndOf="@+id/tILDeliveryOption"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvReceiveParcelTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvReceiveParcelTitle">

                    <RadioButton
                        android:id="@+id/rbReceiveParcelYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rbReceiveParcelNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvDateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:padding="@dimen/_6sdp"
                    android:text="Date"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@id/tvReceiveParcelTitle" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:text="06 Nov 2019"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@id/tvDateTitle" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILGoodsArticle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    app:layout_constraintEnd_toEndOf="@+id/tILDeliveryOption"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@id/tvDate">

                    <EditText
                        android:id="@+id/etGoodsArticle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Goods / article received" />

                </android.support.design.widget.TextInputLayout>

                <android.support.constraint.Group
                    android:id="@+id/gpReceivedParcel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_96sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@+id/tILGoodsArticle" />

                <ImageView
                    android:id="@+id/imgReceivedParcel"
                    android:layout_width="@dimen/_96sdp"
                    android:layout_height="@dimen/_96sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@+id/tILGoodsArticle" />

                <ImageView
                    android:id="@+id/imgReceivedParcelCamera"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/ic_camera"
                    app:layout_constraintEnd_toEndOf="@+id/imgReceivedParcel"
                    app:layout_constraintTop_toTopOf="@+id/imgReceivedParcel" />

                <TextView
                    android:id="@+id/tvReceivedParcel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:text="Photo of parcel received"
                    android:fontFamily="@font/gotham_light"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgReceivedParcel"
                    app:layout_constraintLeft_toRightOf="@id/imgReceivedParcel"
                    app:layout_constraintTop_toTopOf="@id/imgReceivedParcel" />

                <android.support.constraint.Group
                    android:id="@+id/gpNewSelfie"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_96sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintStart_toStartOf="@+id/imgReceivedParcel"
                    app:layout_constraintTop_toBottomOf="@+id/imgReceivedParcel" />

                <ImageView
                    android:id="@+id/imgNewSelfie"
                    android:layout_width="@dimen/_96sdp"
                    android:layout_height="@dimen/_96sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintStart_toStartOf="@+id/imgReceivedParcel"
                    app:layout_constraintTop_toBottomOf="@+id/imgReceivedParcel" />

                <ImageView
                    android:id="@+id/imgNewSelfieCamera"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/ic_camera"
                    app:layout_constraintEnd_toEndOf="@+id/imgNewSelfie"
                    app:layout_constraintTop_toTopOf="@+id/imgNewSelfie" />

                <TextView
                    android:id="@+id/tvNewSelfie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:text="Upload new selfie"
                    android:fontFamily="@font/gotham_light"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgNewSelfie"
                    app:layout_constraintLeft_toRightOf="@id/imgNewSelfie"
                    app:layout_constraintTop_toTopOf="@id/imgNewSelfie" />

                <CheckBox
                    android:id="@+id/cbParcelDelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@+id/imgNewSelfie" />

                <TextView
                    android:id="@+id/tvParcelDelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm, correct parcel delivered"
                    app:layout_constraintBottom_toBottomOf="@+id/cbParcelDelivered"
                    app:layout_constraintStart_toEndOf="@+id/cbParcelDelivered"
                    app:layout_constraintTop_toTopOf="@+id/cbParcelDelivered" />

                <TextView
                    android:id="@+id/tvGoodConditionTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:text="Receive / delivered in good condition?"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="@+id/tILDeliveryOption"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@+id/cbParcelDelivered" />

                <RadioGroup
                    android:id="@+id/rgGoodCondition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/tILDeliveryOption"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@+id/tvGoodConditionTitle">

                    <RadioButton
                        android:id="@+id/rbGoodConditionYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rbGoodConditionNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No" />

                </RadioGroup>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILNoiInGoodCondition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    app:layout_constraintEnd_toEndOf="@+id/tILDeliveryOption"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@id/rgGoodCondition">

                    <EditText
                        android:id="@+id/etNoiInGoodCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="If no, enter details" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tvRaiseDispute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raise dispute"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_9sdp"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@id/tILNoiInGoodCondition" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILSatisfied"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    app:layout_constraintEnd_toEndOf="@+id/tILDeliveryOption"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@id/tvRaiseDispute">

                    <EditText
                        android:id="@+id/etSatisfied"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="If satisfied" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tvDispute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:text="Any Dispute?"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="@+id/tILDeliveryOption"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@+id/tILSatisfied" />

                <RadioGroup
                    android:id="@+id/rgDispute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/tILDeliveryOption"
                    app:layout_constraintStart_toStartOf="@+id/tILDeliveryOption"
                    app:layout_constraintTop_toBottomOf="@+id/tvDispute">

                    <RadioButton
                        android:id="@+id/rbDisputeYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rbDisputeNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No" />

                </RadioGroup>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tILWriteFeedBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    app:layout_constraintEnd_toEndOf="@+id/rgDispute"
                    app:layout_constraintStart_toStartOf="@+id/rgDispute"
                    app:layout_constraintTop_toBottomOf="@id/rgDispute">

                    <EditText
                        android:id="@+id/etWriteFeedBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Write feedback" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/rounded_button_background"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="@+id/tILWriteFeedBack"
                    app:layout_constraintStart_toStartOf="@+id/tILWriteFeedBack"
                    app:layout_constraintTop_toBottomOf="@+id/tILWriteFeedBack" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>
