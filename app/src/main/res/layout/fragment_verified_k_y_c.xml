<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgCLose"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/ic_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgKYCStatus"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_170sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.30" />

        <TextView
            android:id="@+id/tvKYCStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imgKYCStatus"
            app:layout_constraintStart_toStartOf="@+id/imgKYCStatus"
            app:layout_constraintTop_toBottomOf="@+id/imgKYCStatus" />

        <TextView
            android:id="@+id/tvAadhaarNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="@+id/imgKYCStatus"
            app:layout_constraintStart_toStartOf="@+id/imgKYCStatus"
            app:layout_constraintTop_toBottomOf="@+id/tvKYCStatus" />

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="@+id/imgKYCStatus"
            app:layout_constraintStart_toStartOf="@+id/imgKYCStatus"
            app:layout_constraintTop_toBottomOf="@+id/tvAadhaarNo" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>